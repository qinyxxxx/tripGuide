generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int         @id @default(autoincrement())
  email        String      @unique
  auth0Id      String      @unique @default("")
  name         String?
  birthDate    String?
  gender       String?
  introduction String?     @db.VarChar(255)
  tipGuide     TripGuide[]
  comment      Comment[]
}

model TripGuide {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  guser      User      @relation(fields: [guserId], references: [id])
  guserId    Int
  title     String    @db.VarChar(255)
  isPublic  Boolean   @default(true)
  country   String    @db.VarChar(255)
  city      String?   @db.VarChar(255)
  duration  Int       @db.Int
  rating    Int       @db.Int
  cost      Float?      @default(-1)
  content   String    @db.Text
  comment   Comment[]
}

model Comment {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  cuser       User      @relation(fields: [cuserId], references: [id])
  cuserId     Int
  tripGuide   TripGuide @relation(fields: [tripGuideId], references: [id])
  tripGuideId Int
  content     String    @db.Text
}
